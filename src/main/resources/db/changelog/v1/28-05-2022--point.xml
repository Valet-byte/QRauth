<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="28-05-2022--point--004" author="Valet-Byte">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="point"/>
            </not>
        </preConditions>

        <createTable tableName="point">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="creator_id"
                    type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="x" type="decimal">
                <constraints nullable="false"/>
            </column>

            <column name="y" type="decimal">
                <constraints nullable="false"/>
            </column>

            <column name="radius" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="create_time" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="actual_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>